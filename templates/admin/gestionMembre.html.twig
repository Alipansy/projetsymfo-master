{% extends "base.html.twig" %}
{% block title %}
	Gestion des membres
{% endblock %}

{% block body %}

	{% for message in app.flashes('success') %}
		<div class="alert alert-success text-center w-50 mx-auto my-2">{{message}}</div>
	{% endfor %}


	<div class="container">
		<h1 class="text-center my-4">
			Gestion des Utilisateurs</h1>
		<table class="table table-dark">
			<thead>
				<tr>
					{% for data in colonnes %}
						<th>{{data}}</th>
					{% endfor %}
					<th>Option</th>
				</tr>

			</thead>
			<tbody>
				{% for membres in membre %}
					<tr>
						<td>{{membres.id}}</td>
						<td>{{membres.email}}</td>
						<td>{{membres.roles| join(',')}}</td>
                        <td>{{membres.password}}</td>
						<td>{{membres.pseudo}}</td>
						<td>{{membres.nom}}</td>
						<td>{{membres.prenom}}</td>
                        <td>{{membres.civilite}}</td>
                        <td>{{membres.dateEnregistrement|date("d/m/Y Ã  H:i:s")}}</td>
						<td>
							<a href="{{path('admin_membre_edit',{id: membres.id})}}" class="btn btn-primary">
								<i class="fa fa-edit"></i>
							</a>
							<a href="{{path('admin_membre_delete',{id: membres.id})}}" class="btn btn-secondary">
								<i class="fa fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}


			</tbody>
		</table>

	</div>

{% endblock %}
