		{% block body %}
		
		<h1>Bienvenue sur Agence Log ! </h1>

<div class="container mt-5">
    <div class="row justify-content-evenly">
    {% for vehicules in vehicule %}
    <div class="col-md-4">
    <div class="card text-white bg-dark h-100">
        <div class="card-header"></div>
        <div class="card-body">
            <h4 class="card-title">{{vehicules.titre}}</h4>
            <p class="card-text text-end h3">{{vehicules.marque}}</p>
			<p class="card-text text-end h3">{{vehicules.description}}</p>
			<p class="card-text text-end h3">{{vehicules.photo}}</p>
			<p class="card-text text-end h3">{{vehicules.prix_journalier}}€</p>
            <div class="text-center my-2">
                <a href="{{path('admin_vehicule_edit',{id: vehicules.id})}}" class="btn btn-secondary">Détails</a>
			{% if is_granted('ROLE_ADMIN', 'ROLE_USER') %}
                <a href="{{path('app_commande', {vehiculeId: vehicules.id})}}" class="btn btn-success">Commander</a>
			{% else %}
			 						<a href="{{ path('app_login') }}" class="btn btn-success">Connectez-vous pour commander</a>

			{% endif %}
            </div>
        </div>
    </div> 
    </div>
	{% endfor %}
		{% endblock %}
		<style>
		h1{
