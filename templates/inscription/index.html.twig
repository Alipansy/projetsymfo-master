{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container" >
<h1 style="color : #333; text-align: center; margin : 30px">Rejoignez-nous</h1>

{{form_start(inscription)}}

{{form_row(inscription.pseudo , {
   label : 'pseudo'
})}}
{{form_row(inscription.password , {
   label : 'mot de passe'
})}}
{{form_row(inscription.nom , {
   label : 'nom'
})}}
{{form_row(inscription.prenom , {
   label : 'prénom'
})}}
{{form_row(inscription.email , {
   label : 'email'
})}}
{{form_row(inscription.civilite , {
   label : 'civilité'
})}}
{{form_row(inscription.plainPassword)}}


<button type="submit" class="btn btn-info mt-4 mb-20 col-6 " >Enregistrer</button>

{{form_end(inscription)}}
</div>
{% endblock %}
